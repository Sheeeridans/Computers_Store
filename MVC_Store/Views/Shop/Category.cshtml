@model IEnumerable<MVC_Store.Models.ViewModels.Shop.ProductVM>

@{
    ViewBag.Title = ViewBag.CategoryName;
}

<h2>@ViewBag.CategoryName</h2>


<table class="table">
    <tr>
        <th>
            Наименование
        </th>
        <th>
            Описание
        </th>
        <th>
            Цена
        </th>
        <th>
            Картинка
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price) руб.
        </td>
       
        <td>
            @if (item.ImageName == null)
            {
                <img src="~/Content/img/no_image.png" />
            }
            else
            {
                <a href="/shop/product-details/@item.Slug">
                    <img src="/Images/Uploads/Products/@item.Id/Thumbs/@item.ImageName" />
                </a>
            }
        </td>
        <td>
            <a href="/shop/product-details/@item.Slug" class="btn btn-info">Подробнее...</a>
        </td>
    </tr>
}

</table>
